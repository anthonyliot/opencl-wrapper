{
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "cmakeFormat.args": [
        "--config-file",
        "${workspaceRoot}/.cmake-format.json"
    ],
    "clang-format.style": "file",
    "C_Cpp.clang_format_style": "file : ${workspaceRoot}/.clang_format",
    "pre-commit-helper.runOnSave": "all hooks",
    "pre-commit-helper.config": "${workspaceRoot}/.pre-commit-config.yaml",
    "files.associations": {
        "cassert": "cpp",
        "string": "cpp"
    },
}
